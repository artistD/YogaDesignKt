<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.UserSettingActivity"
    android:background="#FF222222">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="560dp"
        android:layout_centerInParent="true">


        <androidx.cardview.widget.CardView
            android:id="@+id/cd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#FF333333"
            android:layout_marginBottom="20dp"
            android:layout_above="@id/civ_con">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사용자 설정을 \n입력해주세요"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="16dp"/>

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:id="@+id/civ_con"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_centerInParent="true">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ"
                android:layout_width="144dp"
                android:layout_height="144dp"
                android:layout_centerInParent="true"
                android:onClick="clickUpdateImg"
                android:src="@drawable/img_1" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_photo"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="4dp"/>


        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_below="@id/civ_con">

            <EditText
                android:id="@+id/et_nickname"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="#FFFFFFFF"
                android:inputType="text"
                android:hint="nickname"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"/>

        </androidx.cardview.widget.CardView>



    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:onClick="clickCancel"
        android:backgroundTint="#FF5252FF"
        android:layout_margin="12dp"
        app:cardElevation="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소ㅇㅇ"
            android:padding="8dp"
            android:textSize="20sp"
            android:textColor="#FF5252FF"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"
            android:padding="8dp"
            android:textSize="20sp"
            android:textColor="#FFFFFFFF"
            android:layout_gravity="center"/>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_alignParentRight="true"
        android:onClick="clickStart"
        android:layout_margin="12dp"
        android:backgroundTint="#FF5252FF"
        app:cardElevation="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시작하기"
            android:padding="8dp"
            android:textSize="20sp"
            android:textColor="#FFFFFFFF" />

    </androidx.cardview.widget.CardView>


    <RelativeLayout
        android:id="@+id/blur"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99333333"
        android:clickable="true"
        android:visibility="invisible"/>


    <ProgressBar
        android:id="@+id/pg"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_centerInParent="true"
        android:indeterminateTint="#FF5252FF"
        android:visibility="invisible"/>


</RelativeLayout>

